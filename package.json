{
  "name": "low-code-platform",
  "type": "module",
  "version": "1.1.1",
  "private": true,
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "scripts": {
    "dev": "turbo dev",
    "build": "pnpm build:dts && node scripts/build.mjs",
    "build:dts": "pnpm --filter \"@low-code/cli\" build && tsc -p tsconfig.build-browser.json && vue-tsc --declaration --emitDeclarationOnly --project tsconfig.build-vue.json && rollup -c rollup.dts.config.js && rimraf temp",
    "build:playground": "turbo build --filter=runtime-vue3 && turbo build --filter=playground",
    "lint": "turbo lint",
    "clean:top": "rimraf --glob */**/dist */**/entry-dist */dist coverage dwt*",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "simple-git-hooks",
    "release": "vv"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.1.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@types/node": "^20.17.30",
    "@unocss/eslint-plugin": "^65.5.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "eslint": "^9.24.0",
    "lint-staged": "^15.5.1",
    "minimist": "^1.2.8",
    "nbump": "^2.1.0",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.12.1",
    "turbo": "^2.5.0",
    "typescript": "5.6.2",
    "vite": "^6.3.2",
    "vitest": "^3.1.1",
    "vue": "^3.5.13",
    "vue-tsc": "2.0.29"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "eslint --fix"
    ]
  }
}
